{
    "environment": {
        "name": "default",
        "weights": {
            "folder": "weights",
            "file": "weights.h5",
            "load": "True"
        },
        "log_folder": "logs",
        "tensorboard_folder": "TensorBoard",
        "summary_line_length": "150",
        "model_plot_folder": "models"
    },
    "collection": {
        "folder": "env('UNMIX_COLLECTION_DIR')",
        "validation": {
            "ratio": "0.2",
            "mode": "first"
        }
    },
    "training": {
        "batch_size": "1",
        "epoch_count": "10",
        "epoch": {
            "count": "10",
            "shuffle": "True"
        },
        "verbose": "1",
        "loss_function": "mean_squared_error",
        "optimizer": "adam",
        "metrics": ["mean_pred"],
        "choppers": {
            "horizontal": {
                "direction": "horizontal",
                "mode": "split",
                "size": "64"           
            }
        },
        "callbacks": {
            "tensorboard" : {
                "write_images": "True",
                "write_grads": "True",
                "histogram_freq": "2"
            },
            "early_stopping": {
                "min_delta": "0.8",
                "patience": "0.8",
                "verbose": "1"
            },
            "weights": {
                "file_name": "callback_weights.h5",
                "best_only": "True",
                "verbose": "1"
            }
        },
        "model": {
            "name": "unmix",
            "alpha1": "0.1",
            "alpha2": "0.01",
            "rate": "0.1"
        }
    }
}