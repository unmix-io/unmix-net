{
    "environment": {
        "name": "default",
        "weights": {
            "folder": "weights",
            "file": "weights.h5"
        },
        "log_folder": "logs",
        "temp_folder": "temp",
        "summary_line_length": "150",
        "model_plot_folder": "models"
    },
    "collection": {
        "folder": "env('UNMIX_COLLECTION_DIR')",
        "validation": {
            "ratio": "0.2",
            "mode": "first"
        }
    },
    "training": {
        "batch_size": "8",
        "epoch": {
            "count": "10",
            "shuffle": "False"
        },
        "save_chops": "False",
        "shuffle_chops_in_song": "True",
        "verbose": "1",
        "loss_function": "mean_absolute_error",
        "optimizer": "adam",
        "metrics": ["mean_pred"],
        "load_weights": "False",
        "chopper": {
            "direction": "horizontal",
            "mode": "split",
            "size": "64"
        },
        "normalizer": {
            "name": "normalizer_real_imag"
        },
        "callbacks": {
            "model_checkpoint": {
                "file_name": "callback_weights.h5",
                "monitor": "loss",
                "best_only": "True",
                "weights_only": "False",
                "mode": "auto",
                "period": "1",
                "verbose": "1"
            }
        },
        "model": {
            "name": "leakyrelu",
            "alpha1": "0.1",
            "alpha2": "0.01",
            "rate": "0.1"
        }
    }
}