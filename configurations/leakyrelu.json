{
    "environment": {
        "name": "default",
        "weights": {
            "folder": "weights",
            "file": "weights.h5"
        },
        "log_folder": "logs",
        "summary_line_length": "150",
        "model_plot_folder": "models"
    },
    "collection": {
        "folder": "env('UNMIX_COLLECTION_DIR')",
        "validation": {
            "ratio": "0.2",
            "mode": "first"
        }
    },
    "training": {
        "batch_size": "32",
        "epoch": {
            "count": "10",
            "shuffle": "False"
        },
        "shuffle_chops_in_song": "True",
        "verbose": "1",
        "loss_function": "mean_absolute_error",
        "optimizer": "adam",
        "metrics": ["mean_pred"],
        "load_weights": "False",
        "choppers": {
            "horizontal": {
                "direction": "horizontal",
                "mode": "split",
                "size": "64"           
            }
        },
        "normalizer": {
            "name": "normalizer_real_imag"
        },
        "callbacks": {
            "model_checkpoint": {
                "file_name": "callback_weights.h5",
                "monitor": "loss",
                "best_only": "True",
                "weights_only": "False",
                "mode": "auto",
                "period": "1",
                "verbose": "1"
            },
            "early_stopping": {
                "monitor": "loss",
                "min_delta": "0.01",
                "patience": "0.8",
                "verbose": "1"
            },
            "reduce_learningrate": {
                "monitor": "loss",
                "factor": "0.2",
                "patience": "5",
                "min_learningrate": "0.001"
            }
        },
        "model": {
            "name": "leakyrelu",
            "alpha1": "0.1",
            "alpha2": "0.01",
            "rate": "0.1"
        }
    }
}